{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build:next": "next build",
    "build": "pnpm db:migrate && pnpm build:next",
    "start": "next start",
    "check": "pnpm type-check && pnpm lint && pnpm format",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix && prettier --check .",
    "lint-staged": "lint-staged",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:push": "cross-env NODE_ENV=production drizzle-kit push --config=drizzle.config.ts",
    "db:migrate": "cross-env NODE_ENV=production tsx ./src/db/migrate.ts",
    "db:generate": "cross-env NODE_ENV=production drizzle-kit generate --config=drizzle.config.ts",
    "db:studio": "cross-env NODE_ENV=production drizzle-kit studio",
    "db:clear": "cross-env NODE_ENV=production tsx ./src/db/clear.ts",
    "db:reset": "pnpm run db:clear && pnpm run db:migrate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@node-rs/argon2": "^1.8.3",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.11.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.1",
    "lucia": "^3.2.0",
    "lucide-react": "^0.424.0",
    "next": "14.2.5",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zsa": "^0.5.1",
    "zsa-react": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.16.5",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
